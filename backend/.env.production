# Production environment variables for backend
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Security Configuration
SECRET_KEY=your-super-secret-key-here-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=https://seekwell.vercel.app,https://seekwell-frontend.vercel.app,http://localhost:3000,http://127.0.0.1:3000

# AI Integration (Optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Render Configuration
PORT=8000
RENDER_EXTERNAL_URL=https://seekwell-backend.onrender.com

# Environment
ENVIRONMENT=production
DEBUG=false

# Logging
LOG_LEVEL=INFO

# Health Check
HEALTH_CHECK_PATH=/health
